<h1>Liste des Gamers</h1>
<form method="get" name="formulaire" action="{{ url('gamers.new') }}">
  <button type="submit">Ajouter</button>
</form>
<table>
<thead>
  <tr>
    <th>ID</th>
    <th>PSEUDO</th>
    <th>Team</th>
    <th>ACTION</th>
  </tr>
</thead>
<tbdoy>
{% for gamer in gamers %}
   <tr>
     <td>{{gamer.id}}</td>
     <td>{{gamer.team}}</td>
     <td>{{gamer.pseudo}}</td>
     <td></td>
     <td>
       <form method="post" name="formulaire" action="{{ url('gamers.delete', {id: gamer.id}) }}">
            <button type="submit">Supprimer</button>
        </form>
      </td>
      <td>
        <form method="get" name="formulaire" action="{{ url('gamers.edit', {id: gamer.id}) }}">
          <button type="submit">Modifier</button>
        </form>
      </td>
      <td>
        <form method="get" name="formulaire" action="{{ url('gamers.display', {id: gamer.id}) }}">
          <button type="submit">Followers</button>
        </form>
      </td>
       <tr>
   </tr>
   
   <tr>  
    <th>ID</th>
    <th>NOM</th>
    <th>PRENOM</th>
  </tr>
   {% for user in users %}
   <tr>
    {% if user.gamerID == gamer.id %}
     <td>{{user.id}}</td>
     <td>{{user.nom}}</td>
     <td>{{user.prenom}}</td>
    {% endif %}
   {% endfor %}
   </tr>
{% endfor %}
</tbdoy>
</table>